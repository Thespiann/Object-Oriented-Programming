package com.myproject;
import java.util.*;
import java.io.*;


public class Deserialize {
    void printAnimals() throws IOException, ClassNotFoundException {
       int x= Serialize.getCounter();
        ArrayList<Animal> myAnimals= new ArrayList<>();
        FileInputStream fileIn = new FileInputStream("newAnimal.ser");
        ObjectInputStream in = new ObjectInputStream(fileIn);
        myAnimals = (ArrayList) in.readObject();
        in.close();
        fileIn.close();
        System.out.println("I got all your info!\n");
        for (int i=0;i<x;i++){
        int y=i+1;
        System.out.println("Animal "+y+"\n");
        System.out.println("Name: " + myAnimals.get(i).getName());
        System.out.println("Species: " + myAnimals.get(i).getAnimalSpecies());
        System.out.println("Class: " + myAnimals.get(i).getAnimalClass());
        System.out.println("Code: " + myAnimals.get(i).getCode());
        System.out.println("Mass: " + myAnimals.get(i).getMass()+"kg");
        System.out.println("Max Age: " + myAnimals.get(i).getAge()+" years\n");}
    }
}
